<%- include('partials/nav-bar.ejs') %>

<h1 class="title">Regístrate</h1>

<br><br>

<form action="/user/signup" method="POST">

    <label for="nombre">Nombre:</label>
    <input required name="nombre" id="nombre" class="input is-rounded" type="text" placeholder="Eduardo Daniel Juárez Pineda">

    <label for="username">Nombre de usuario:</label>
    <input name="username" id="username" class="input is-rounded" type="text" placeholder="lalo">

    <label for="password">Password:</label>
    <input name="password" id="password" class="input is-rounded" type="password" >

    <br><br>

    <input class="p-5 rounded-lg bg-slate-700 text-zinc-100 hover:bg-zinc-100 hover:text-slate-700"
    type="submit" value="Registrar">

</form>

<div class="text-center items-center px-10">
    <p>Got an account already?</p>
    <br>
        <a class="p-5 rounded-lg bg-slate-700 text-zinc-100 hover:bg-zinc-100 hover:text-slate-700" 
        method="GET" href="/user/login">Log In</a>
</div>